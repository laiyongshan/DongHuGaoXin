<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/cardview_bg"
    android:layout_margin="12dp"
    android:paddingTop="12dp"
    >

    <!--<android.support.v7.widget.CardView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--app:cardCornerRadius="6dip"-->
        <!--app:contentPaddingBottom="0dp"-->
        <!--&gt;-->



        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/timepoint_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whilecolor"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:lines="1"
                android:layout_toLeftOf="@+id/rv_item_aqi_tv"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                />

            <TextView
                android:id="@+id/rv_item_aqi_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:lines="1"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                />

            <androidapp.donghugaoxin.suncere.com.customview.AlwaysMarqueeTextView
                android:id="@+id/station_name_tv"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:text="站点"
                android:textColor="@color/whilecolor"
                android:textSize="16sp"
                android:ellipsize="marquee"
                android:focusable="true"
                android:marqueeRepeatLimit="marquee_forever"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                />



        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="12dp"
            android:weightSum="6"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <suncere.androidapp.lib.customview.PollutantNameTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whilecolor"
                    android:textSize="16sp"
                    android:text="PM2.5"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/pm25_value_tv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/whilecolor"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <suncere.androidapp.lib.customview.PollutantNameTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whilecolor"
                    android:textSize="16sp"
                    android:text="PM10"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/pm10_value_tv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/whilecolor"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <suncere.androidapp.lib.customview.PollutantNameTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whilecolor"
                    android:textSize="16sp"
                    android:text="SO2"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/so2_value_tv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/whilecolor"
                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"

                >

                <suncere.androidapp.lib.customview.PollutantNameTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whilecolor"
                    android:textSize="16sp"
                    android:text="NO2"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/no2_value_tv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/whilecolor"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <suncere.androidapp.lib.customview.PollutantNameTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whilecolor"
                    android:textSize="16sp"
                    android:text="O3"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/o3_value_tv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/whilecolor"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <suncere.androidapp.lib.customview.PollutantNameTextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/whilecolor"
                    android:textSize="16sp"
                    android:text="CO"
                    android:gravity="center_horizontal"
                    />

                <TextView
                    android:id="@+id/co_value_tv"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="--"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"
                    android:paddingRight="2dp"
                    android:paddingLeft="2dp"
                    android:textColor="@color/whilecolor"
                    />

            </LinearLayout>


        </LinearLayout>
</LinearLayout>