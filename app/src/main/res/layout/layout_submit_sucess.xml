<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="6dp"
        android:drawablePadding="12dp"
        android:drawableTop="@mipmap/icon_submint_succes"
        android:text="     提交成功！"
        android:textColor="@color/moretextcorol"
        android:textSize="16sp"
        android:gravity="center"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gra"
        android:layout_margin="30dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <com.flyco.roundview.RoundTextView
            android:id="@+id/check_round_tv"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginRight="16dp"
            android:text="查看处理"
            android:gravity="center"
            android:textSize="14sp"
            rv:rv_backgroundColor="#ffffff"
            rv:rv_backgroundPressColor="#383838"
            rv:rv_cornerRadius="6dip"
            rv:rv_strokeColor="@color/colorPrimary"
            rv:rv_strokeWidth="1dp"
            rv:rv_textPressColor="#ffffff" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:layout_marginLeft="16dp"
            android:textSize="14sp"
            android:text="返 回"
            android:gravity="center"
            android:textColor="#383838"
            rv:rv_backgroundColor="#ffffff"
            rv:rv_backgroundPressColor="#383838"
            rv:rv_cornerRadius="6dip"
            rv:rv_strokeColor="@color/colorPrimary"
            rv:rv_strokeWidth="1dp"
            rv:rv_textPressColor="#ffffff" />
    </LinearLayout>


</LinearLayout>