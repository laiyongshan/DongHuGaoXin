<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="6dp"
        android:drawablePadding="12dp"
        android:drawableTop="@mipmap/icon_submint_fail"
        android:gravity="center"
        android:text="    提交失败！"
        android:textColor="@color/moretextcorol"
        android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:textColor="@color/moretextcorol2"
        android:textSize="14sp"
        android:paddingTop="6dp"
        android:gravity="center"
        android:visibility="gone"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_margin="30dp"
        android:background="@color/gra" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="重新提交"
            android:textSize="14sp"
            rv:rv_backgroundColor="#ffffff"
            rv:rv_backgroundPressColor="#383838"
            rv:rv_cornerRadius="6dip"
            rv:rv_strokeColor="@color/colorPrimary"
            rv:rv_strokeWidth="1dp"
            rv:rv_textPressColor="#ffffff" />

        <com.flyco.roundview.RoundTextView
            android:id="@+id/rtv_1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:padding="8dp"
            android:text="返回编辑"
            android:textColor="#383838"
            android:textSize="14sp"
            rv:rv_backgroundColor="#ffffff"
            rv:rv_backgroundPressColor="#383838"
            rv:rv_cornerRadius="6dip"
            rv:rv_strokeColor="@color/colorPrimary"
            rv:rv_strokeWidth="1dp"
            rv:rv_textPressColor="#ffffff" />
    </LinearLayout>


</LinearLayout>