<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="13dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="13dp"
    android:background="@drawable/general_warn_bg1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1.5dp"
        android:background="@mipmap/bg_shape_general">

        <ImageView
            android:id="@+id/warn_level_label_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@mipmap/icon_general_warn_tab" />


        <LinearLayout
            android:id="@+id/layout_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="19dp">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/warn_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lines="1"
                    android:text="站点一PM10浓度值报警"
                    android:textColor="@color/moretextcorol"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/description_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="站点一PM10浓度值已达到300Ug/m3,请及时处理"
                    android:textColor="@color/moretextcorol"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/warn_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="报警时间：----年--月--日 --：--"
                    android:textColor="@color/moretextcorol2"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/commit_time_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="提交处理：----年--月--日 --：--"
                    android:textColor="@color/moretextcorol2"
                    android:textSize="12sp"
                    android:visibility="invisible" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|right"
                android:layout_marginLeft="16dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/deal_with_iv"
                    android:layout_width="66dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/icon_pending" />

                <TextView
                    android:id="@+id/go_deal_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/bg_commit_button1"
                    android:gravity="center"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:text="处  理"
                    android:textColor="@color/whilecolor"
                    android:textSize="12sp"
                    android:visibility="invisible" />

            </LinearLayout>


        </LinearLayout>

        <View
            android:id="@+id/dividing_line"
            android:layout_width="match_parent"
            android:layout_height="1.0dp"
            android:layout_below="@+id/layout_1"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="6dp"
            android:background="@color/gra" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/dividing_line"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:weightSum="2"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="技术人员处理信息"
                    android:textSize="12sp"
                    />

                <TextView
                    android:id="@+id/check_technicist_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="审 核"
                    android:textSize="12sp"
                    android:textColor="@color/whilecolor"
                    android:background="@drawable/bg_commit_button1"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_marginTop="12dp"

                    />

            </LinearLayout>


            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/gra" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="站点负责人处理信息"
                    android:textSize="12sp"
                    />


                <TextView
                    android:id="@+id/check_head_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="暂无"
                    android:textSize="12sp"
                    android:textColor="@color/whilecolor"
                    android:background="@drawable/bg_commit_button2"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingBottom="4dp"
                    android:paddingTop="4dp"
                    android:layout_marginTop="12dp"

                    />

            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>


</RelativeLayout>